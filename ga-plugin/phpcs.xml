<?xml version="1.0"?>
<ruleset name="GA Plugin Coding Standards">
    <description>WordPress coding standards for GA Plugin</description>

    <!-- Check all PHP files in the plugin directory -->
    <file>./ga-plugin.php</file>
    <file>./includes</file>

    <!-- Exclude vendor and test directories -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>

    <!-- Use WordPress coding standards -->
    <rule ref="WordPress">
        <!-- Allow short array syntax -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>

        <!-- Allow short open echo tags -->
        <exclude name="Generic.PHP.DisallowShortOpenTag.EchoFound"/>
    </rule>

    <!-- Check for PHP cross-version compatibility -->
    <config name="testVersion" value="7.4-"/>

    <!-- Show progress -->
    <arg value="ps"/>

    <!-- Use colors in output -->
    <arg name="colors"/>

    <!-- Show sniff names in report -->
    <arg value="ns"/>
</ruleset>
